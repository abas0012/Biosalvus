@*@model IEnumerable<Biosalvus.Models.AvesEndangered>*@
@model Biosalvus.Models.EndageredMap
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .filter-group {
        font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
        font-weight: 600;
        top: 110px;
        right: 300px;
        z-index: 1;
        border-radius: 3px;
        width: 150px;
        color: #fff;
    }

        .filter-group input[type='checkbox']:first-child + label {
            border-radius: 3px 3px 0 0;
        }

        .filter-group label:last-child {
            border-radius: 0 0 3px 3px;
            border: none;
        }

        .filter-group input[type='checkbox'] {
            display: none;
        }

            .filter-group input[type='checkbox'] + label {
                background-color: #3386c0;
                display: block;
                cursor: pointer;
                padding: 10px;
                border-bottom: 1px solid rgba(0, 0, 0, 0.25);
            }

            .filter-group input[type='checkbox'] + label {
                background-color: #3386c0;
                text-transform: capitalize;
            }

                .filter-group input[type='checkbox'] + label:hover,
                .filter-group input[type='checkbox']:checked + label {
                    background-color: #4ea0da;
                }

                    .filter-group input[type='checkbox']:checked + label:before {
                        content: '✔';
                        margin-right: 5px;
                    }
</style>
<h2>AvesEndangered Map</h2>
<div class="row">
    <div class="col-md-9">
        <div id="map" style="height:450px; width:760px;"></div> <!--This is the Map-->
    </div>
    <div class="col-md-3">
        <nav id="filter-group" class="filter-group"></nav> <!--This is the filter elements-->
    </div>
</div>


@* Aves Endangered Table *@
<table class="table" style="display:none">
    @foreach (var item in Model.aveslist)
    {
        <tr class="avescoordinates">
            <td class="avesindividualcount">
                @Html.DisplayFor(modelItem => item.individualCount)
            </td>
            <td class="avessex">
                @Html.DisplayFor(modelItem => item.sex)
            </td>
            <td class="aveseventdate">
                @Html.DisplayFor(modelItem => item.eventDate)
            </td>
            <td class="aveseventtime">
                @Html.DisplayFor(modelItem => item.eventTime)
            </td>
            <td class="avesstate">
                @Html.DisplayFor(modelItem => item.stateProvince)
            </td>
            <td class="aveslatitude">
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td class="aveslongitude">
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td class="avesname">
                @Html.DisplayFor(modelItem => item.vernacularName)
            </td>
            <td class="avesspecies">
                @Html.DisplayFor(modelItem => item.species)
            </td>
            <td class="avesstatus">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td class="catfood">
                @Html.DisplayFor(modelItem => item.CatFood)
            </td>
        </tr>
    }
</table>

@* Cat Record Table *@
<table class="table" style="display:none">
    @foreach (var item in Model.catslist)
    {
    <tr class="catcoordinates">
        <td class="catname">
            @Html.DisplayFor(modelItem => item.VernacularName)
        </td>
        <td class="catlatitude">
            @Html.DisplayFor(modelItem => item.Latitude)
        </td>
        <td class="catlongitude">
            @Html.DisplayFor(modelItem => item.Longitude)
        </td>
        <td class="catstate">
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td class="catlga">
            @Html.DisplayFor(modelItem => item.LocalGovernmentAreas2011)
        </td>
        <td class="catindividualcount">
            @Html.DisplayFor(modelItem => item.IndividualCount)
        </td>
    </tr>
    }
</table>

@section Scripts {
    @Scripts.Render("~/bundles/mapbox")
}