@model Biosalvus.Models.EndageredMapViewModel
@{
    ViewBag.Title = "AvesEndangered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .filter-group {
        font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
        font-weight: 600;
        top: 110px;
        right: 300px;
        z-index: 1;
        border-radius: 3px;
        width: 150px;
        color: #fff;
    }

        .filter-group input[type='checkbox']:first-child + label {
            border-radius: 3px 3px 0 0;
        }

        .filter-group label:last-child {
            border-radius: 0 0 3px 3px;
            border: none;
        }

        .filter-group input[type='checkbox'] {
            display: none;
        }

            .filter-group input[type='checkbox'] + label {
                background-color: #3386c0;
                display: block;
                cursor: pointer;
                padding: 10px;
                border-bottom: 1px solid rgba(0, 0, 0, 0.25);
            }

            .filter-group input[type='checkbox'] + label {
                background-color: #a94442;
                text-transform: capitalize;
            }

                .filter-group input[type='checkbox'] + label:hover,
                .filter-group input[type='checkbox']:checked + label {
                    background-color: #4ea0da;
                }

                    .filter-group input[type='checkbox']:checked + label:before {
                        content: '✔';
                        margin-right: 5px;
                    }
    .legend {
        background-color: #fff;
        border-radius: 3px;
        bottom: 30px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
        padding: 10px;
        right: 10px;
        z-index: 1;
    }

        .legend h4 {
            margin: 0 0 10px;
        }

        .legend div span {
            border-radius: 50%;
            display: inline-block;
            height: 10px;
            margin-right: 5px;
            width: 10px;
        }
</style>
<h2>Threatened Birds vs. Cats Map</h2>
<div class="row">
    <div class="col-md-10">
        <div id="map" style="height:450px;"></div> <!--This is the Map-->
    </div>
    <div class="col-md-2">
        <div class="row">
            <div class="col-md-12 col-xs-6">
                <nav id="filter-group" class="filter-group"></nav> <!--This is the filter elements-->
            </div>
            <div class="col-md-12 col-xs-6">
                <div id="legend" class="legend">
                    <h4>Cat Occurance</h4>
                    <div><span style="background-color: rgba(255,200,0,1)"></span><nbsp></nbsp><p>High: 100%</p></div>
                    <div><span style="background-color: rgba(255,255,183,1)"></span><nbsp></nbsp><p>Moderate: 50%</p></div>
                    <div><span style="background-color: rgba(209,229,240,1)"></span><nbsp></nbsp><p></p>Low: 0%</div>
                </div>
            </div>
        </div>        
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div style="border-color:black">
            <h4><strong>Threatened Birds Occurance:</strong></h4>
            <div>Extinct</div>
            <div class="bar" style="width:100%;height:10px;border-style:solid;background: linear-gradient(to right, rgba(169, 169, 169,0.5), rgba(169, 169, 169,1));"></div>
            <div>Critically Endangered</div>
            <div class="bar" style="width:100%;height:10px;border-style:solid;background: linear-gradient(to right, rgba(51, 0, 0,0.5), rgba(51, 0, 0,1));"></div>
            <div>Vulnerable</div>
            <div class="bar" style="width:100%;height:10px;border-style:solid;background: linear-gradient(to right, rgba(255, 165, 0,0.5), rgba(255, 165, 0,1));"></div>
            <div>Endangered</div>
            <div class="bar" style="width:100%;height:10px;border-style:solid;background: linear-gradient(to right, rgba(255, 69, 0,0.1), rgba(255, 69, 0,1));">
            </div>
            <div class="row" >
                <div class="col-lg-4 col-md-4 col-sm-4" style="text-align:left;">
                    Low (1%)
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4" style="text-align:center;">
                    Moderate (50%)
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4" style="text-align:right;">
                    High (100%)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        @* Aves Endangered Table *@
        <table class="table" style="display:none">
            @*style="display:none"*@
            @foreach (var item in Model.aveslist)
            {
                <tr class="avescoordinates">
                    <td class="avesstate">
                        @Html.DisplayFor(modelItem => item.avesstate)
                    </td>
                    <td class="aveslatitude">
                        @Html.DisplayFor(modelItem => item.aveslatitude)
                    </td>
                    <td class="aveslongitude">
                        @Html.DisplayFor(modelItem => item.aveslongitude)
                    </td>
                    <td class="avesname">
                        @Html.DisplayFor(modelItem => item.avesname)
                    </td>
                    <td class="avesstatus">
                        @Html.DisplayFor(modelItem => item.avesstatus)
                    </td>
                    <td class="catfood">
                        @Html.DisplayFor(modelItem => item.catfood)
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        @* Cat Record Table *@
        <table class="table" style="display:none">
            @foreach (var item in Model.catslist)
            {
                <tr class="catcoordinates">
                    <td class="catname">
                        @Html.DisplayFor(modelItem => item.catname)
                    </td>
                    <td class="catlatitude">
                        @Html.DisplayFor(modelItem => item.catlatitude)
                    </td>
                    <td class="catlongitude">
                        @Html.DisplayFor(modelItem => item.catlongitude)
                    </td>
                    <td class="catstate">
                        @Html.DisplayFor(modelItem => item.catstate)
                    </td>
                    <td class="catindividualcount">
                        @Html.DisplayFor(modelItem => item.catindividualcount)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/mapbox")
}